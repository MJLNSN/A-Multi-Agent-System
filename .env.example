# Multi-Agent Chat Threading System - Environment Configuration

# Server
PORT=8000
ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://chatuser:chatpass@localhost:5432/chatdb
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# OpenRouter API
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxx
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_TIMEOUT=60

# Default Models
DEFAULT_MODEL=openai/gpt-4-turbo
SUMMARIZATION_MODEL=openai/gpt-4-turbo
SUMMARIZATION_MESSAGE_THRESHOLD=10

# Context Management
MAX_CONTEXT_MESSAGES=20
MAX_CONTEXT_TOKENS=8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

